<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.moivepage.member.MemberMapper">
    <delete id="deleteMember" parameterType="com.example.moivepage.dto.Member">
        DELETE FROM member
        where id = #{id}
    </delete>

    <insert id="addMember" parameterType="com.example.moivepage.dto.Member">
        INSERT INTO member
        (
            id,
            password,
            name,
            address,
            email,
            gender
        )
        VALUE
        (
            #{id},
            #{password},
            #{name},
            #{address},
            #{email},
            #{gender}
        )
    </insert>

    <update id="updateMember" parameterType="com.example.moivepage.dto.Member">
        UPDATE
            member
        SET
            name = #{name},
            password = #{password},
            address = #{address},
            email = #{email},
            gender = #{gender}
        WHERE
            id = #{id}
    </update>
</mapper>